@model NetsanGida.Model.Announcement

@{
    ViewBag.Title = "Duyuru Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/config.js"></script>
<script src="~/CKFinderScripts/ckfinder.js"></script>
<link href="~/Areas/Admin/AdminLTE-master/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Areas/Admin/AdminLTE-master/plugins/sweetalert2/sweetalert2.all.min.js"></script>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Duyuru</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Duyuru Güncelle</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Model.Name Güncelle</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @using (Html.BeginForm("Update", "Announcement", FormMethod.Post, new { id = "duyuruForm" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.AnnouncementId)
                                @Html.HiddenFor(model => model.CreateDate)

                                <div class="form-group">
                                    <label class="control-label col-md-12">Adı</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Resim</label>
                                    <div class="col-md-10">
                                        <button class="btn btn-info" type="button" onclick="selectFileWithCKFinder('Image')"><i class="fa fa-upload"></i></button>
                                        @Html.TextBox("Image", null, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Açıklama</label>
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-success">Kaydet</button>

                                        <a style="cursor:pointer" class="btn btn-warning" onclick="window.history.back(-1);">Geri Dön</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    var description = CKEDITOR.replace('Description');
    CKFinder.setupCKEditor(description);
</script>
<script src="~/Areas/Admin/AdminLTE-master/plugins/jquery/jquery.min.js"></script>
<script>
    $('#duyuruForm').on('submit', function (e) {
        e.preventDefault();
        var form = $('#duyuruForm')[0];
        var data = new FormData(form);
        data.set('Description', CKEDITOR.instances['Description'].getData());
        $.ajax({
            url: '/Admin/Announcement/Update',
            type: 'POST',
            data: data,
            processData: false,
            contentType: false,
            cache: false,
            timeout: 600000,
            success: function (result) {
                if (result.isSuccess) {
                    Swal.fire(
                        'Duyuru Güncelleme',
                        result.message,
                        'success'
                    )
                    setTimeout(function () {
                        window.location.href = "/Admin/Announcement/List";
                    }, 2000);
                }
                else {
                    Swal.fire(
                        'Duyuru Güncelleme',
                        result.message,
                        'danger'
                    )
                }
            }
        })
    });
</script>
